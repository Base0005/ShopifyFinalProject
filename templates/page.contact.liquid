
<div class="ContactSection">
    <div class="ContactInfo">
        <h1>Contact Us</h1>
        <p>Feel free To use the form to reach out by email or by phone</p>
        <div class="PhoneInfo">
            <img src="{{ 'phone.svg' | asset_url }}" width="25px">
            <p>123-456-7890</p>
        </div>
        <div class="EmailInfo">
            <img src="{{ 'email.svg' | asset_url }}" width="25px">
            <p>lazydaycommerce@gmail.com</p>
        </div>
    </div>
    <form action="POST" class="ContactForm">
        <div class="Name">
            <label for="NameInput"><b>Name:</b></label>
            <input type="text" id="NameInput">
        </div>
        <div class="Email">
            <label for="EmailInput"><b>Email:</b></label>
            <input type="email" id="EmailInput">
        </div>
        <div class="Phone">
            <label for="PhoneInput"><b>Phone (Optional):</b></label>
            <input type="tel" id="PhoneInput">
        </div>
        <div class="OrderNumber">
            <label for="OrderNumberInput"><b>Order Number:</b></label>
            <input type="tel" id="OrderNumberInput">
        </div>
        <div class="ContactMessage">
            <label for="MessageInput"><b>Message:</b></label>
            <textarea id="MessageInput"></textarea>
        </div>
        <input type="submit" value="Submit" class="SubmitButton">
    </form>
</div>

