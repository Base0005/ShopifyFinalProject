header{
  padding: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-family: 'Inter';
  background-color: #231F20;
  color: white;
}
body{
  margin: 0;
}

.HeaderLogo{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-left: 10px;
}

.HeaderBar{
  list-style-type: none;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.HeaderBar a{
  border-radius: 25px;
  color: white;
  text-decoration: none;
  padding: 10px;
  padding-left: 20px;
  padding-right: 20px;
}

.HeaderBar a:hover{
  color: #231F20;
  background-color: #fff;
  transition: 0.2s;
}

.HeaderShopping{
  list-style-type: none;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  gap: 30px;
  padding-right: 20px;
}

/* Index */

.indexFlex{
  padding: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  gap: 10px;
  align-items: center;
  font-family: 'Inter';
}

.product-card{
  width: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.product-card h1{
  font-size: 25px;
}

/* Banner*/

.banner{
  background-color: #787878;
  padding: 40px;
  padding-left: 100px;
  font-family: 'Inter';
  color: white;
}

/* Contact */

.ContactSection{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-family: 'Inter';
  gap: 30px;
  padding-top: 20px;
  padding-bottom: 20px;
}

.PhoneInfo{
  display: flex;
  flex-direction: row;
  gap: 10px;
}

.EmailInfo{
  display: flex;
  flex-direction: row;
    gap: 10px;
}

.ContactForm{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  gap: 20px;
  font-family: 'Inter';
  padding: 20px;
  padding-left: 100px;
  padding-right: 100px;
  background-color: #787878;
  border-radius: 25px;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
}

.Name{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.Email{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.Phone{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.OrderNumber{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.ContactMessage{
  display: flex;
  flex-direction: column;
  justify-content: flex-start
}

.ContactForm textarea{
  width: 300px;
  height: 100px;
}

.SubmitButton{
  font-family: 'Inter';
  font-weight: 600;
  background-color: #fff;
  border-style: none;
  border-radius: 25px;
  padding: 10px;
}

.SubmitButton:hover{
  background-color: #231F20;
  color: white;
  cursor: pointer;
  transition: 0.2s;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
  transition: 0.2s;
}

/* footer */

.footer{
  padding: 20px;
  background-color: #231F20;
}

.footerInfo{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  gap: 10px;
  align-items: center;
}

.footerSocials{
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 10px;
  align-items: center;
}

.FooterPages{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  color: white;
  list-style-type: none;
  font-family: 'Inter';
  gap: 20px;
}

.FooterPages a{
  color: white;
  text-decoration: none;
  padding: 10px;
  padding-left: 20px;
  padding-right: 20px;
}

.FooterPages a:hover{
  color: #231F20;
  background-color: #fff;
  transition: 0.2s;
}